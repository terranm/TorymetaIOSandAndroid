<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tory_white"
    android:fitsSystemWindows="true"
    >

    <!--
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_top_bar_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            layout="@layout/common_top_bar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    -->
    <include
        android:id="@+id/topBar"
        layout="@layout/common_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_top_bar_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <!-- 드랍다운 메뉴 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dropdownBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/friend_search_dropdown_btn_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/friend_search_dropdown_btn_margin_top"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dropdownTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/friend_list_title_new"
                android:textSize="@dimen/common_font_size_medium"
                android:textColor="@color/tory_black"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/dropdownTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/friend_search_dropdown_icon"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 검색창 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editBoxLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tory_talk_friend_list_cell_height"
            android:background="@drawable/common_corner_circle_stroke_gray_02"
            android:layout_marginTop="@dimen/friend_search_edit_box_margin_top"
            app:layout_constraintTop_toBottomOf="@id/dropdownBtn"
            >
            <EditText
                android:id="@+id/editBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_text_font_14"
                android:textColor="@color/tory_black"
                android:hint="@string/friend_search_hint"
                android:textColorHint="@color/tory_gray_03"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:background="@null"
                android:paddingLeft="@dimen/friend_search_edit_box_margin_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/editBoxDeleteBtn"
                />
            <!-- 삭제 버튼 -->
            <ImageView
                android:id="@+id/editBoxDeleteBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@drawable/friend_search_edit_box_btn_delete"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/editBox"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 리스트 -->
        <com.tnmeta.torymeta.ui.NestedScrollableHost
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/friend_search_list_margin_top"
            app:layout_constraintTop_toBottomOf="@id/editBoxLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.tnmeta.torymeta.ui.NestedScrollableHost>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>