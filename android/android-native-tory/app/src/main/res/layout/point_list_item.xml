<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/point_list_item_height"
    android:paddingHorizontal="@dimen/nft_collection_list_padding"
    android:paddingVertical="@dimen/my_page_write_item_padding_vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="@color/color_9e9e9e"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="2022-03-26"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:textColor="@color/tory_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        tools:text="토리를 찾아라(미션)"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/transaction_number"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="@color/color_9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="(1234567890)"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pointInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:textColor="@color/color_red_ff"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/validity"
        tools:text="차감 13,000,000"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_9e9e9e"
        android:fontFamily="@font/noto_sans_regular"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="유효기간 2025.03.24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>