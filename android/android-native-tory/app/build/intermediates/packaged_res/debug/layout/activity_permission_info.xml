<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tory_white"
    tools:context=".intro.PermissionInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/permission_title_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/permission_title_top_margin"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:layout_gravity="top"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/permission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_title"
            android:textSize="@dimen/university_select_desc_01_font_size"
            android:textColor="@color/tory_black"
            android:fontFamily="@font/noto_sans_semi_bold"
            android:layout_marginTop="@dimen/common_top_bar_margin_top"
            android:gravity="left"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_desc"
            android:textSize="@dimen/campus_top_list_item_title_font_size"
            android:textColor="@color/color_9e9e9e"
            android:fontFamily="@font/noto_sans_semi_bold"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/campus_visit_select_campus_item_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/permission_title"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_marginBottom="@dimen/mileage_layout_top_margin"
        app:layout_constraintTop_toBottomOf="@id/permission_title_layout"
        app:layout_constraintBottom_toTopOf="@id/btnOK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/common_padding_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/university_select_desc_02_margin_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/location_title"
                    android:text="@string/permission_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/location_icon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/location_desc"
                    android:text="@string/permission_location_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/location_title"
                    app:layout_constraintLeft_toLeftOf="@id/location_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/record_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_layout">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/record_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/record_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/record_title"
                    android:text="@string/permission_record_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/record_icon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/record_desc"
                    android:text="@string/permission_record_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/record_title"
                    app:layout_constraintLeft_toLeftOf="@id/record_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/body_sensor_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/record_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/body_sensor_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/body_sensor_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/body_sensor_title"
                    android:text="@string/permission_body_sensor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/body_sensor_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/body_sensor_desc"
                    android:text="@string/permission_body_sensor_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/body_sensor_title"
                    app:layout_constraintLeft_toLeftOf="@id/body_sensor_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/camera_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/body_sensor_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/camera_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/camera_title"
                    android:text="@string/permission_camera_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/camera_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/camera_desc"
                    android:text="@string/permission_camera_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/camera_title"
                    app:layout_constraintLeft_toLeftOf="@id/camera_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/photo_album_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/camera_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/photo_album_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/photo_album_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/photo_album_title"
                    android:text="@string/permission_photo_album_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/photo_album_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/photo_album_icon_desc"
                    android:text="@string/permission_photo_album_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/photo_album_title"
                    app:layout_constraintLeft_toLeftOf="@id/photo_album_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/phonebook_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_album_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/phonebook_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phonebook_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/phonebook_title"
                    android:text="@string/permission_phonebook_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/phonebook_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/phonebook_desc"
                    android:text="@string/permission_phonebook_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/phonebook_title"
                    app:layout_constraintLeft_toLeftOf="@id/phonebook_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notice_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/permission_layout_height"
                android:layout_marginTop="@dimen/campus_visit_select_padding_top"
                android:paddingHorizontal="@dimen/marker_detail_building_address_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phonebook_layout">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/notice_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_notice"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title"
                    android:text="@string/permission_notice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/shop_item_list_title_font_size"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    android:layout_marginLeft="@dimen/common_padding_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/notice_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_desc"
                    android:text="@string/permission_notice_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/common_font_size_small"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/noto_sans_regular"
                    app:layout_constraintTop_toBottomOf="@id/notice_title"
                    app:layout_constraintLeft_toLeftOf="@id/notice_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/permission_comment_01"
                android:text="@string/permission_comment_01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/common_font_size_small"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_marginTop="@dimen/notification_setting_switch_btn_height"
                app:layout_constraintTop_toBottomOf="@id/notice_layout"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/permission_comment_02"
                android:text="@string/permission_comment_02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/common_font_size_small"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/noto_sans_regular"
                android:layout_marginTop="@dimen/custom_tool_bar_top_padding"
                app:layout_constraintTop_toBottomOf="@id/permission_comment_01"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnOK"
        android:onClick="onClick"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/university_select_btn_complete_height"
        android:layout_margin="@dimen/campus_visit_select_padding_horizontal"
        android:text="@string/str_comfirm"
        android:textStyle="bold"
        android:textSize="@dimen/common_font_size_large"
        android:textColor="@color/tory_white"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:background="@drawable/common_corner_circle_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>