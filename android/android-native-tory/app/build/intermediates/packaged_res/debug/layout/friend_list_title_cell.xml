<?xml version="1.0" encoding="utf-8"?>
<!-- 친구 목록 > 카테고리 타이틀 Cell -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tory_talk_friend_list_cell_height"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="새로운 친구"
        android:textSize="@dimen/tory_talk_friend_list_cell_category_font_size"
        android:textColor="@color/tory_black"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.2727"
            app:layout_constraintDimensionRatio="1:2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/friend_list_category_detail_icon"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>