<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/common_padding_horizontal"
    android:paddingTop="@dimen/common_padding_vertical"
    android:paddingBottom="@dimen/marker_detail_building_padding_bottom"
    android:background="@drawable/common_bottom_sheet_bg"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <!-- 타이틀 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중앙대학교 서울캠퍼스 서라벌홀"
        android:textSize="@dimen/marker_detail_building_title_font_size"
        android:textColor="@color/tory_purple"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/address"
        />
    <!-- 주소 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울 동작구 흑석로"
        android:textSize="@dimen/marker_detail_building_address_font_size"
        android:textColor="@color/tory_black"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/marker_detail_building_address_margin_top"
        />
</androidx.constraintlayout.widget.ConstraintLayout>