<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seminar_popup_desc_01_margin_top"
    android:paddingHorizontal="@dimen/my_page_write_item_padding_horizontal"
    android:paddingVertical="@dimen/my_page_write_item_padding_vertical"
    android:background="@drawable/common_corner_rect_stroke_gray">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.12.28"
        android:textSize="@dimen/my_page_write_item_font_size"
        android:textColor="@color/color_9e9e9e"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/content"
        android:layout_marginRight="@dimen/my_page_write_item_title_margin_right"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.12.28"
        android:textSize="@dimen/my_page_write_item_font_size"
        android:textColor="@color/tory_purple"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="right|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/date"
        tools:text="토리충전 3,000"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.12.28"
        android:textSize="@dimen/my_page_write_item_font_size"
        android:textColor="@color/color_9e9e9e"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="right|top"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="카카오페이"
        />



</androidx.constraintlayout.widget.ConstraintLayout>