<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tory_white"
    tools:context=".seminar.main.SeminarMainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/seminar_center_title"
            android:textSize="@dimen/common_top_bar_title_font_size"
            android:textColor="@color/tory_black"
            android:fontFamily="@font/noto_sans_semi_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/calendarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_calendar"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toLeftOf="@id/my_seminar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_seminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_my_seminar"
            android:layout_marginRight="8dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tory_talk_friend_list_cell_height"
            android:background="@drawable/search_corner_circle_stroke_purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_font_size_medium"
                android:textColor="@color/tory_black"
                android:hint="@string/search_hint_message"
                android:maxLines="1"
                android:textColorHint="@color/sub_purple_2"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:background="@null"
                android:paddingLeft="@dimen/friend_search_edit_box_margin_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/editBoxDeleteBtn"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/editBoxDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_search"
                android:layout_marginRight="11dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/editBox"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/search_edit_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_coordinator"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_seminar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <HorizontalScrollView
                        android:id="@+id/sort_scrollview_layout"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/filter_all_layout"
                                android:layout_width="61dp"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="@drawable/common_corner_round_stroke_purple_02">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/filter_all"
                                    android:textColor="@color/tory_purple"
                                    android:textSize="@dimen/common_text_font_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전체"
                                    android:paddingBottom="2dp"
                                    android:fontFamily="@font/noto_sans_regular"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/filter_start_layout"
                                android:layout_width="73dp"
                                android:layout_marginLeft="6dp"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="@drawable/common_corner_circle_stroke_gray_04">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/filter_start"
                                    android:textColor="@color/tory_gray_04"
                                    android:textSize="@dimen/common_text_font_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_now"
                                    android:paddingBottom="2dp"
                                    android:fontFamily="@font/noto_sans_regular"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/filter_before_layout"
                                android:layout_width="73dp"
                                android:layout_marginLeft="6dp"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="@drawable/common_corner_circle_stroke_gray_04">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/filter_before"
                                    android:textColor="@color/tory_gray_04"
                                    android:textSize="@dimen/common_text_font_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_before"
                                    android:paddingBottom="2dp"
                                    android:fontFamily="@font/noto_sans_regular"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/filter_end_layout"
                                android:layout_width="61dp"
                                android:layout_marginLeft="6dp"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="@drawable/common_corner_circle_stroke_gray_04">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/filter_end"
                                    android:textColor="@color/tory_gray_04"
                                    android:textSize="@dimen/common_text_font_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_end"
                                    android:paddingBottom="2dp"
                                    android:fontFamily="@font/noto_sans_regular"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <com.tnmeta.torymeta.ui.NestedScrollableHost
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sort_scrollview_layout"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/refresh_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/seminarListView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="2"
                                tools:listitem="@layout/seminar_list_item" />
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </com.tnmeta.torymeta.ui.NestedScrollableHost>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/emptyView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_seminar_empty_message"
                        android:textSize="16sp"
                        android:textColor="@color/tory_gray_04"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:layout_marginTop="80dp"
                        android:visibility="invisible"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sort_scrollview_layout"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seminar_tutorial_title"
                    android:textSize="16sp"
                    android:textColor="@color/tory_black"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/noto_sans_semi_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_seminar_layout"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/seminar_tutorial"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_tutorial"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                -->

