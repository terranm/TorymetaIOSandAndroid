<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:layout_marginTop="@dimen/common_top_bar_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/topBar"
            layout="@layout/common_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closeBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_top_bar_height"
            android:background="@drawable/close"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_border"
        android:layout_marginTop="@dimen/common_alert_dialog_padding_vertical"
        android:background="@color/tory_gray_03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:paddingTop="@dimen/mileage_layout_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/common_padding_horizontal"
            android:paddingVertical="@dimen/common_padding_horizontal"
            android:layout_gravity="top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/select_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_page_tory_point_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/campus_inner"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:background="@drawable/common_corner_round_purple_01"
                    app:layout_constraintRight_toRightOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/campus_inner_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/campus_inner_title"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_white"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/campus_out"
                    android:layout_width="128dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:background="@drawable/common_corner_round_stroke_purple_02"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/guideline"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/campus_out_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/campus_out_title"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_purple"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stepComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/now_step_title"
                android:textSize="@dimen/my_page_tory_point_font_size"
                android:textColor="@color/tory_black"
                android:fontFamily="@font/noto_sans_semi_bold"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/notification_setting_divider_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_layout"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgPedInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_ped_info"
                app:layout_constraintTop_toTopOf="@id/stepComment"
                app:layout_constraintStart_toEndOf="@id/stepComment"
                app:layout_constraintBottom_toBottomOf="@id/stepComment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/shop_my_point_font_size"
                android:textColor="@color/tory_purple"
                android:fontFamily="@font/noto_sans_semi_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/step_title_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stepComment"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stepPerComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tory_talk_friend_list_cell_category_font_size"
                android:textColor="@color/tory_gray_01"
                android:fontFamily="@font/noto_sans_regular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/step_title_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stepCount"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mainStepImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/step_main_inner_image"
                android:layout_marginTop="@dimen/shop_item_list_margin_top"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stepPerComment"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reward_layout_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_page_tory_point_height"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@id/mainStepImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStep_01"
                    android:layout_width="@dimen/step_image_width"
                    android:layout_height="@dimen/step_image_height"
                    android:padding="@dimen/step_image_padding"
                    android:background="@drawable/common_corner_circle_stroke_purple"
                    android:src="@drawable/step_inner_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStep_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_font_size_large"
                    android:textColor="@color/tory_black"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/custom_tool_bar_top_padding"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toRightOf="@id/imgStep_01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/step_reward_01_layout"
                    android:layout_width="@dimen/step_reward_layout_width"
                    android:layout_height="0dp"
                    android:onClick="onClick"
                    android:background="@drawable/step_select_purple"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/step_reward_01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_white"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reward_layout_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_page_tory_point_height"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/reward_layout_01"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStep_02"
                    android:layout_width="@dimen/step_image_width"
                    android:layout_height="@dimen/step_image_height"
                    android:padding="@dimen/step_image_padding"
                    android:background="@drawable/common_corner_circle_stroke_purple"
                    android:src="@drawable/step_inner_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStep_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_font_size_large"
                    android:textColor="@color/tory_black"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/custom_tool_bar_top_padding"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toRightOf="@id/imgStep_02"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/step_reward_02_layout"
                    android:layout_width="@dimen/step_reward_layout_width"
                    android:layout_height="0dp"
                    android:onClick="onClick"
                    android:background="@drawable/step_select_purple"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/step_reward_02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_white"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reward_layout_03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_page_tory_point_height"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/reward_layout_02"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStep_03"
                    android:layout_width="@dimen/step_image_width"
                    android:layout_height="@dimen/step_image_height"
                    android:padding="@dimen/step_image_padding"
                    android:background="@drawable/common_corner_circle_stroke_purple"
                    android:src="@drawable/step_inner_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStep_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_font_size_large"
                    android:textColor="@color/tory_black"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/custom_tool_bar_top_padding"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toRightOf="@id/imgStep_03"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/step_reward_03_layout"
                    android:layout_width="@dimen/step_reward_layout_width"
                    android:layout_height="0dp"
                    android:onClick="onClick"
                    android:background="@drawable/step_select_purple"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/step_reward_03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_white"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reward_layout_04"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_page_tory_point_height"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/reward_layout_03"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStep_04"
                    android:layout_width="@dimen/step_image_width"
                    android:layout_height="@dimen/step_image_height"
                    android:padding="@dimen/step_image_padding"
                    android:background="@drawable/common_corner_circle_stroke_purple"
                    android:src="@drawable/step_inner_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStep_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_font_size_large"
                    android:textColor="@color/tory_black"
                    android:fontFamily="@font/noto_sans_regular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/custom_tool_bar_top_padding"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toRightOf="@id/imgStep_04"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/step_reward_04_layout"
                    android:layout_width="@dimen/step_reward_layout_width"
                    android:layout_height="0dp"
                    android:onClick="onClick"
                    android:background="@drawable/step_select_purple"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/step_reward_04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/campus_top_list_item_title_font_size"
                        android:textColor="@color/tory_white"
                        android:fontFamily="@font/noto_sans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>