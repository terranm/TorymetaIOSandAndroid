<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <!-- content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/popup_dialog_width"
        android:layout_height="@dimen/popup_dialog_height"
        android:background="@drawable/seminar_popup_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <!-- desc01 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="알찬 정보로 스마트한 대학생활 시작하세요."
            android:textSize="@dimen/seminar_popup_desc_01_font_size"
            android:textColor="@color/tory_white"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/seminar_popup_desc_01_margin_top"
            />
        <!-- desc02 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="신입생 세미나가\n곧 시작됩니다."
            android:textSize="@dimen/seminar_popup_desc_02_font_size"
            android:textColor="@color/tory_white"
            android:fontFamily="@font/noto_sans_semi_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc1"
            android:layout_marginTop="@dimen/seminar_popup_desc_02_margin_top"
            />
        <!-- image -->
        <ImageView
            android:layout_width="@dimen/seminar_popup_img_width"
            android:layout_height="@dimen/seminar_popup_img_height"
            android:background="@drawable/seminar_popup_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc2"
            android:layout_marginTop="@dimen/seminar_popup_img_margin_top"
            />
        <!-- 세미나 입장 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/enterBtn"
            android:layout_width="@dimen/seminar_popup_enter_btn_width"
            android:layout_height="@dimen/seminar_popup_enter_btn_height"
            android:background="@drawable/common_corner_circle_purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/seminar_popup_enter_btn_margin_bottom"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="세미나 보러가기"
                android:textSize="@dimen/seminar_popup_enter_btn_font_size"
                android:textColor="@color/tory_white"
                android:fontFamily="@font/noto_sans_semi_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 닫기 버튼 -->
        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="@dimen/seminar_popup_close_btn_width"
            android:layout_height="0dp"
            android:background="@drawable/seminar_popup_btn_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/seminar_popup_close_btn_margin_right"
            android:layout_marginBottom="@dimen/seminar_popup_close_btn_margin_bottom"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--content-->
</androidx.constraintlayout.widget.ConstraintLayout>